<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_liquor_zone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">




    <LinearLayout
        android:id="@+id/middle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/black"
        android:layout_weight="0.4"
        android:padding="15dp">

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/liquor_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#2196F3"
                android:orientation="horizontal">

                <include
                    android:id="@+id/app_bar_main"
                    layout="@layout/add_menu_soju"
                    android:layout_width="320dp"
                    android:layout_height="match_parent" />

                <include
                    android:id="@+id/app_bar_main"
                    layout="@layout/add_menu_beer"
                    android:layout_width="320dp"
                    android:layout_height="match_parent" />

                <include
                    android:id="@+id/app_bar_main"
                    layout="@layout/add_menu_beer_japan"
                    android:layout_width="320dp"
                    android:layout_height="match_parent" />

                <include
                    android:id="@+id/app_bar_main"
                    layout="@layout/add_menu_beer_usa"
                    android:layout_width="320dp"
                    android:layout_height="match_parent" />

                <include
                    android:id="@+id/app_bar_main"
                    layout="@layout/add_menu_balentine"
                    android:layout_width="320dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>



        </HorizontalScrollView>

    </LinearLayout>



</LinearLayout>