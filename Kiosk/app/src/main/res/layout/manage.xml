<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <ImageView
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="700dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/gmarketsansmedium"
        android:gravity="center"
        android:text="주문 전체보기"
        android:textColor="#FFFFFF"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/product_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/gmarketsansmedium"
            android:background="@drawable/button_round"
            android:backgroundTint="#FF1493"
            android:textColor="#FFFFFF"
            android:padding="20dp"
            android:textSize="20dp"
            android:text="상품 보기" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/order_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/gmarketsansmedium"
            android:background="@drawable/button_round"
            android:backgroundTint="#FF1493"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:text="주문 보기" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/waiting_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gmarketsansmedium"
            android:background="@drawable/button_round"
            android:backgroundTint="#FF1493"
            android:padding="20dp"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:text="웨이팅 보기" />



    </LinearLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="489dp"></ListView>

    <View
        android:background="#FF1493"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/gmarketsansbold"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="주문 상태         테이블 번호         주문 내역         주문 시간"
        android:textColor="#FFFFFF"
        android:textSize="32dp" />
</LinearLayout>
