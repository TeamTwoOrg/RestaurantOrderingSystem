<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="770dp"
    android:layout_height="600dp"
    android:background="#292828"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/menu_detail_window_top_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="2.12"
        android:background="#FF4081"
        android:layout_marginBottom="30dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/logo1943"
            android:padding="10sp"
            android:layout_marginTop="5dp"/>

        <!--공백-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/escButton"
            android:scaleType="fitCenter"
            android:background="#00000000"
            android:src="@drawable/esc"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="-20dp"
            android:padding="5dp"
            android:contentDescription="close"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_detail_window_middle_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="0.9"
        android:padding="10dp">
        <ImageView
            android:padding="30dp"
            android:id="@+id/detail_popup_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:src="@drawable/voice_recognition_img"
            android:scaleType="centerCrop"
            android:layout_marginTop="-25dp"
            android:layout_marginLeft="-5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginRight="20dp">
            <TextView
                android:id="@+id/detail_popup_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="menu name"
                android:textSize="37sp"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_marginTop="80dp"/>
            <TextView
                android:id="@+id/detail_popup_script"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:text="menu detail script,\n example_ a nice and warm corn soup."
                android:textColor="#FFFFFF"
                android:layout_weight="0.7"
                android:textAlignment="center"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_detail_window_bottom_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.12"
        android:orientation="horizontal"
        android:background="#00000000"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="40dp">
        <ImageButton
            android:id="@+id/minus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="minus"
            android:scaleType="fitCenter"
            android:src="@drawable/minus"
            android:layout_weight="1"
            android:background="#00000000"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/count_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1"
            android:textColor="#FEFEFE"
            android:textSize="50dp"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/plus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="plus"
            android:scaleType="fitCenter"
            android:src="@drawable/shop_plus"
            android:layout_weight="1"
            android:background="#00000000"
            android:padding="5dp"/>
        <Button
            android:id="@+id/orderingBtn_temp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.55"
            android:background="@drawable/button_hot_pink"
            android:text="장바구니에 담기"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30dp"/>
    </LinearLayout>

</LinearLayout>
