<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#292828">

    <ImageButton
        android:id="@+id/voiceIcon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#292828"
        android:layout_weight="1.1"
        android:contentDescription="음성 인식을 시작 합니다"
        android:scaleType="centerCrop"/>

    <!-- 음성 인식 버튼 -->
    <Button
        android:id="@+id/voice_recognition_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.1"
        android:text="음성 인식"
        android:textSize="24dp"
        android:background="@drawable/button_special"
        android:textColor="#FFFFFF" />


    <!-- 공백 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4"/>


    <Button
        android:id="@+id/topBelowButton2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/button_background_forbottom"
        android:text="장바구니"
        android:textSize="24dp"
        android:textColor="#FFFFFF"
        android:layout_weight="1"

        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"

        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"/>


</LinearLayout>
