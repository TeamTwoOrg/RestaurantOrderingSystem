<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMenuPopUp"
    android:id="@+id/addMenuSuperLayout">

    <include
        android:id="@+id/addMainInfo"
        layout="@layout/plate_add_menu"
        android:layout_width="450dp"
        android:layout_height="match_parent"/>

    <Spinner
        android:id="@+id/category_1_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/addMainInfo"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="150dp"
        />

    <Spinner
        android:id="@+id/category_2_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="120dp"
        android:layout_toRightOf="@id/category_1_spinner" />

    <EditText
        android:id="@+id/script"
        android:maxLines="30"
        android:overScrollMode="ifContentScrolls"
        android:layout_width="800dp"
        android:layout_height="200dp"
        android:layout_weight="5"
        android:background="#292828"
        android:gravity="center"
        android:hint="부가 설명 입력란"
        android:includeFontPadding="false"
        android:textColor="@color/white"
        android:textColorHint="#A3A3A3"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/addMainInfo"
        android:layout_alignTop="@id/category_1_spinner"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="150dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 등록 "
        android:layout_alignTop="@id/script"
        android:layout_toRightOf="@id/addMainInfo"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="770dp"/>

</RelativeLayout>