<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <ImageView
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="700dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/gmarketsansmedium"
        android:gravity="center"
        android:text="주문 전체보기"
        android:textColor="#FFFFFF"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:gravity="center">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Order_Pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/gmarketsansmedium"
            android:background="@drawable/button_round_half"
            android:backgroundTint="#FF1493"
            android:textColor="#FFFFFF"
            android:padding="20dp"
            android:textSize="20dp"
            android:text="주문 대기" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Order_Canceled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/gmarketsansmedium"
            android:background="@drawable/button_round_half"
            android:backgroundTint="#FF1493"
            android:textColor="#FFFFFF"
            android:padding="20dp"
            android:textSize="20dp"
            android:text="주문 취소" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Order_Completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/gmarketsansmedium"
            android:background="@drawable/button_round_half"
            android:backgroundTint="#FF1493"
            android:textColor="#FFFFFF"
            android:padding="20dp"
            android:textSize="20dp"
            android:text="주문 완료" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/product_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/gmarketsansmedium"
            android:background="@drawable/button_round"
            android:backgroundTint="#FFFF00"
            android:textColor="#FFFFFF"
            android:padding="20dp"
            android:textSize="20dp"
            android:text="상품 보기" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp" >

        <!-- 수직으로 스크롤 가능한 내용을 위한 LinearLayout -->
        <LinearLayout
            android:id="@+id/orderZone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF1493"
            android:background="@drawable/round_border"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

    <View
        android:background="#FFFF00"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/gmarketsansbold"
        android:gravity="left"
        android:paddingTop="10dp"
        android:text="                 주문 상태            테이블 번호           주문 내역           주문 시간"
        android:textColor="@android:color/white"
        android:textSize="32dp" />
</LinearLayout>
