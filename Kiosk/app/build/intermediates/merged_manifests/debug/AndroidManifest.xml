<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamtwo.kiosk"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="26"
        android:targetSdkVersion="33" />
    <!-- 인터넷 오디오 권한 설정 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <permission
        android:name="com.teamtwo.kiosk.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.teamtwo.kiosk.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.Kiosk"
        android:usesCleartextTraffic="true" >
        <activity
            android:name="com.teamtwo.kiosk.PayFailActivity"
            android:exported="false" />
        <activity
            android:name="com.teamtwo.kiosk.LoginActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.teamtwo.kiosk.ManageActivity" />
        <activity android:name="com.teamtwo.kiosk.ProductActivity" />
        <activity android:name="com.teamtwo.kiosk.AddMenuPopUp" />
        <activity android:name="com.teamtwo.kiosk.ProductListActivity" />
        <activity android:name="com.teamtwo.kiosk.TableNumberActivity" />
        <activity android:name="com.teamtwo.kiosk.MenuForUser" />
        <activity android:name="com.teamtwo.kiosk.SalesActivity" />
        <activity android:name="com.teamtwo.kiosk.SalesSlipActivity" />
        <activity
            android:name="com.teamtwo.kiosk.PaySuccessActivity"
            android:exported="false" />
        <activity
            android:name="com.teamtwo.kiosk.PayActivity"
            android:exported="false" />

        <provider
            android:name="com.squareup.picasso.PicassoProvider"
            android:authorities="com.teamtwo.kiosk.com.squareup.picasso"
            android:exported="false" />
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.teamtwo.kiosk.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
        </provider>
    </application>

</manifest>