<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292828"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/menu_detail_window_top_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="2.12"
        android:background="@drawable/button_hot_pink_gradient_no_round_edge"
        android:layout_marginBottom="30dp">

        <!--공백-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:padding="10sp"
            android:scaleType="centerCrop"
            android:textAlignment="center"
            android:text="Set table number"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/escButton"
            android:scaleType="fitCenter"
            android:background="#00000000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="-20dp"
            android:padding="5dp"
            android:contentDescription="close"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_detail_window_middle_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="0.9"
        android:padding="10dp">

        <!--공백-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"/>

        <TextView
            android:id="@+id/table_numbering_textview"
            android:padding="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="0"
            android:textSize="100dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_marginTop="-25dp"
            android:layout_marginLeft="-5dp"/>

        <!--공백-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/num_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/btn_number_1"
                    android:scaleType="fitCenter"
                    android:padding="0sp"
                    android:background="#292828"/>
                <ImageButton
                    android:id="@+id/num_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/btn_number_2"
                    android:scaleType="fitCenter"
                    android:padding="0sp"
                    android:background="#292828"/>
                <ImageButton
                    android:id="@+id/num_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/btn_number_3"
                    android:scaleType="fitCenter"
                    android:padding="0sp"
                    android:background="#292828"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/num_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/btn_number_4"
                    android:scaleType="fitCenter"
                    android:padding="0sp"
                    android:background="#292828"/>
                <ImageButton
                    android:id="@+id/num_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/btn_number_5"
                    android:scaleType="fitCenter"
                    android:padding="0sp"
                    android:background="#292828"/>
                <ImageButton
                    android:id="@+id/num_6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/btn_number_6"
                    android:scaleType="fitCenter"
                    android:padding="0sp"
                    android:background="#292828"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/num_7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/btn_number_7"
                    android:scaleType="fitCenter"
                    android:padding="0sp"
                    android:background="#292828"/>
                <ImageButton
                    android:id="@+id/num_8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/btn_number_8"
                    android:scaleType="fitCenter"
                    android:padding="0sp"
                    android:background="#292828"/>
                <ImageButton
                    android:id="@+id/num_9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/btn_number_9"
                    android:scaleType="fitCenter"
                    android:padding="0sp"
                    android:background="#292828"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/btn_delete_num_all"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/btn_delete_all"
                    android:scaleType="fitCenter"
                    android:padding="0sp"
                    android:background="#292828"/>
                <ImageButton
                    android:id="@+id/num_0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/btn_number_0"
                    android:scaleType="fitCenter"
                    android:padding="0sp"
                    android:background="#292828"/>
                <ImageButton
                    android:id="@+id/btn_back_space"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/btn_back_space"
                    android:scaleType="centerCrop"
                    android:paddingBottom="50dp"
                    android:paddingRight="15dp"
                    android:background="#292828"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_detail_window_bottom_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.12"
        android:orientation="horizontal"
        android:background="#00000000"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp">

        <Button
            android:id="@+id/set_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.55"
            android:background="@drawable/button_hot_pink_gradient"
            android:text="테이블 번호 선택"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30dp"/>
    </LinearLayout>

</LinearLayout>
